# ============================================================================
# Embeddings Configuration Examples
# ============================================================================

# Option 1: Use OpenAI Embeddings (Cloud, Requires API Key)
# USE_LOCAL_EMBEDDINGS=False
# OPENAI_API_KEY=sk-proj-your-api-key-here
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# QDRANT_VECTOR_SIZE=1536

# Option 2: Use Local Embeddings (Free, Offline)
USE_LOCAL_EMBEDDINGS=True
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
SENTENCE_TRANSFORMER_DEVICE=cpu
QDRANT_VECTOR_SIZE=384

# If you have GPU support, change device to:
# SENTENCE_TRANSFORMER_DEVICE=cuda

# ============================================================================
# Model Comparison
# ============================================================================

# OpenAI Models:
# - text-embedding-3-small (1536d): $0.020/1M tokens - RECOMMENDED
# - text-embedding-3-large (3072d): $0.130/1M tokens - Higher quality

# Local Models (sentence-transformers):
# - all-MiniLM-L6-v2 (384d): Fast, good quality - RECOMMENDED
# - all-mpnet-base-v2 (768d): Slower, better quality
# - all-MiniLM-L12-v2 (384d): Balanced

# Note: Qdrant vector size must match embedding dimension!
