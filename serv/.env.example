# ============================================================================
# FocusGuard API - Environment Variables
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=FocusGuard API
APP_VERSION=0.1.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Database Settings
# ============================================================================
DATABASE_URL=postgresql+asyncpg://your_username:your_password@localhost:5432/focusguard_db
DATABASE_ECHO=False

# ============================================================================
# JWT Settings
# ============================================================================
# Generate a secure key with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Settings
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000
ALLOW_CREDENTIALS=True

# ============================================================================
# Security Settings
# ============================================================================
BCRYPT_ROUNDS=12

# ============================================================================
# Rate Limiting Settings
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5
