# ============================================================================
# FocusGuard - Production Environment Variables
# ============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control!

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=focusguard_user
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD  # Use: openssl rand -base64 32
POSTGRES_DB=focusguard_db
POSTGRES_PORT=5432

# ============================================================================
# Backend Configuration
# ============================================================================
JWT_SECRET_KEY=CHANGE_ME  # Generate with: openssl rand -hex 32
DEBUG=False
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_URL=https://api.yourdomain.com
FRONTEND_PORT=80

# ============================================================================
# Qdrant Configuration
# ============================================================================
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# ============================================================================
# Optional: Sentry Error Tracking
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================================================
# Optional: RAG/AI Configuration
# ============================================================================
HUGGINGFACE_API_KEY=
OPENAI_API_KEY=
USE_LOCAL_EMBEDDINGS=True
